function [proximal, joint, distal] = get_joint_group(joint)

joint = lower(joint);

try
    switch joint
        case "elbow"
            proximal = "shoulder";
            distal = "wrist";
        case "shouler"
            proximal = "neck";
            distal = "elbow";
        case "knee"
            proximal = "hip";
            distal = "ankle";
    end

catch
